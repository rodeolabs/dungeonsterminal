# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration (for future implementation)
DATABASE_URL=postgresql://username:password@localhost:5432/dungeon_terminal
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# AI Integration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Grok AI Integration (X.AI)
GROK_API_KEY=xai-your-grok-api-key-here
GROK_MODEL=grok-beta
GROK_TEMPERATURE=0.7
GROK_MAX_TOKENS=1000
CONVERSATION_CONTEXT_LIMIT=4000
DND_EDITION=5e

# Session Configuration
SESSION_SECRET=your-session-secret-key
JWT_SECRET=your-jwt-secret-key

# Redis Configuration (for session storage)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (for character portraits, etc.)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Feature Flags
ENABLE_AI_DM=true
ENABLE_REAL_TIME=true
ENABLE_VOICE_INPUT=false
ENABLE_MULTIPLAYER=false